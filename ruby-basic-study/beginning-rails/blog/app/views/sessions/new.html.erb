<!-- notice that you use form_tag instead of form_for
that's because session isn't an Active Record object. -->
<h1>Login</h1>
<%= form_tag session_path do %>
    <div class="field">
      <%= label_tag :email %><br />
      <%= text_field_tag :email %>
    </div>
    <div class="field">
      <%= label_tag :password %><br />
      <%= password_field_tag :password %>
    </div>
    <div class="actions">
      <%= submit_tag 'Login' %>
    </div>
<% end %>